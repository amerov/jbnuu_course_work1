<div class="row">
  <div class="col">
  </div>
  <div class="col-auto">
    <%= link_to 'Добавить', new_admin_genre_path, class: 'btn btn-primary ' %>
  </div>
</div>
<hr>

<table class="table">
  <thead>
    <tr>
      <td>Название</td>
      <td>Кол-во фильмов</td>
      <td>Действия</td>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.movies.count %></td>
        <td>
          <div class="row">
            <div class="col-3">
              <%= link_to 'Редактировать', edit_admin_genre_path(genre), class: 'btn btn-primary' %>
            </div>
            <div class="col-3">
              <%= button_to 'Удалить', admin_genre_path(genre), method: :delete, class: 'btn btn-danger' %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
