<table class="table">
  <th>
    <tr>
      <td>Название</td>
      <td>Кол-во фильмов</td>
      <td>Действия</td>
    </tr>
  </th>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.movies.count %></td>
        <td>
          <button type="">Редактировать </button>
          <button type="">Удалить</button>
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>
